{
  "rules": {

    "users": {
      ".indexOn": ["phoneNumber", "lastActive"],
      "$uid": {
        "phoneNumber": {
          ".read": true,
          ".write": false
        },
        "publicProfile": {
          ".read": true,
          ".write": "$uid === auth.uid"
        },
        "installFlow": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    }
  }
}
